<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="680dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/left_Relative">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orange"
            android:textSize="30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:id="@+id/Orange_Team"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/Orange_Team_Goals"
            android:textSize="45dp"
            android:layout_below="@+id/Orange_Team"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:id="@+id/Player_one"
            android:layout_below="@+id/Orange_Team_Goals">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player one"
                android:textSize="20dp"
                android:id="@+id/Player_One_Name"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:id="@+id/Player_One_Goal"
                android:text="+1"
                android:layout_below="@+id/Player_One_Name"
                android:layout_alignParentLeft="true"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Player_One_Name"
                android:text="Goals:"
                android:paddingTop="5dp"
                android:id="@+id/Player_One_Goals"
                android:textSize="20dp"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@+id/Player_One_Name"
                android:layout_alignParentRight="true"
                android:textSize="25dp"
                android:paddingRight="20sp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:text="+1"
                android:layout_below="@+id/Player_One_Goal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Player_One_Goals"
                android:layout_centerInParent="true"
                android:text="Saves:"
                android:paddingTop="5dp"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Player_One_Goals"/>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="680dp"
        android:layout_toRightOf="@+id/left_Relative">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:textSize="30dp"
            android:layout_centerInParent="true"
            android:id="@+id/Blue_Team"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Blue_Team"
            android:textSize="45dp"
            android:text="0"
            android:layout_centerInParent="true"
            android:id="@+id/Blue_Team_Goals"/>
    </RelativeLayout>



</RelativeLayout>